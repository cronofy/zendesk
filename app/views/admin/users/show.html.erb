<dl>
  <dt>ID</dt>
  <dd><%= user.id %></dd>
</dl>
<dl>
  <dt>Email</dt>
  <dd><%= user.email %></dd>
</dl>
<dl>
  <dt>Cronofy ID</dt>
  <dd><%= user.cronofy_id %> <% if user.cronofy_credentials? %><span class="glyphicon glyphicon-ok"></span><% end %></dd>
</dl>
<dl>
  <dt>Zendesk ID</dt>
  <dd><%= user.zendesk_user_id %> <% if user.zendesk_credentials? %><span class="glyphicon glyphicon-ok"></span><% end %></dd>
</dl>
<dl>
  <dt>Subdomain</dt>
  <dd><%= user.zendesk_subdomain %></dd>
</dl>
<dl>
  <dt>Created</dt>
  <dd><%= user.created_at %></dd>
</dl>
<dl>
  <dd><%= button_to 'Delete', admin_user_path(user.id), method: :delete, data: { confirm: "Are you sure?" } %></dd>
</dl>

<%= form_tag admin_user_path(id: user.id), method: :patch do %>
  <dl>
    <dt>Debug Enabled? <%= check_box_tag :debug_enabled, '1', user.debug_enabled? %></dt>
    <dt>Admin? <%= check_box_tag :is_admin, '1', user.is_admin? %></dt>
  </dl>
  <button type="submit" class="btn btn-default">Update</button>

<% end %>